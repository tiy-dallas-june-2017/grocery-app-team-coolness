<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Employee Schedule</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>

    <nav>
      <a href="/"><img id="logo" src="/assets/images/logo.png"/></a>
      <ul>
        <li><a href="/schedule">Employee Schedule</a></li>
        <li><a href="/auditlog">Audit Log</a></li>
        <li><a href="/currentinventory">Inventory</a></li>
      </ul>
    </nav>

    <div class="container">
      <h2>Employee Schedule</h2>
      <div class="current_data">
        {{ #employees }}
        <div class="item">
          <div class="wide name">{{ name }}</div>
          <div class="narrow edit"><a href="/editEmployee/{{ _id }}">Edit</a></div>
          <div class="wide time_in">{{ time_in }}</div>
          <div class="wide time_out">{{ time_out }}</div>
        </div>
        {{ /employees }}
      </div>
      <a href="/addEmployee"><h3>Add New Item</h3></a>
    </div>

  </body>
</html>
