<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Current Inventory</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>

    <nav>
      <a href="/"><img id="logo" src="/assets/images/logo.png"/></a>
      <ul>
        <li><a href="/schedule">Employee Schedule</a></li>
        <li><a href="/auditlog">Audit Log</a></li>
        <li><a href="/currentinventory">Inventory</a></li>
      </ul>
    </nav>

    <div class="add_items">
      <h2>Add Item</h2>

      <div class="items_form">
        <form action="/add_item" method="POST">
          <div class="form-group">
            <label>Item: </label>
            <input type="text" name="item" value=""/>
          </div>
          <div class="form-group half">
            <label>Quantity: </label>
            <input type="number" name="quantity" value="" />
          </div>
          <div class="form-group half">
            <label>Price: </label>
            <input type="number" step="0.01" name="price" value="" />
          </div>
          <div class="form-group">
            <a href=""><h3>cancel</h3></a>
            <button id="submit" type="submit">Save</button>
          </div>
        </form>


      </div>

      {{ #errorMessage }}
      <h2>{{ errorMessage }}</h2>
      {{ /errorMessage }}

    </div>

  </body>
</html>
